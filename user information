    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String i=jTextField2.getText();
        String n=jTextField3.getText();
        String a=jTextField4.getText();
        String m=jTextField5.getText();
        String ag=jTextField6.getText();
        String w=jTextField7.getText();
        String f=jComboBox1.getSelectedItem().toString();
        String b=jDateChooser3.getDate().toString();
        String e=jDateChooser2.getDate().toString();

        if (jTextField2.getText().trim().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your id !");
        } else if (jTextField3.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your Name !");
        }
        else if (jTextField4.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your address!");
        }
        else if (jTextField5.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your mobile!");
        }
        else if (jTextField6.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your age!");
        }
        else if (jTextField7.getText().equals("")) {
            JOptionPane.showMessageDialog(this, "Please Enter your weight!");
        }
        else {
            try {
                PreparedStatement statement = co.prepareStatement("INSERT INTO data (id,name,address,mobile,age,weight,fees,begin,end) "
                    + "VALUES('"+i+"','"+n+"','"+a+"','"+m+"','"+ag+"','"+w+"','"+f+"','"+b+"','"+e+"')") ;
                statement.executeUpdate();
                JOptionPane.showMessageDialog(this, " تم حفظ البيانات بنجاح");
                if (rs.next()) {
                    String id = rs.getString("id");
                    String name = rs.getString("name");
                    String address=rs.getString("address");
                    String mobile=rs.getString("mobile");
                    String age=rs.getString("age");
                    String weight=rs.getString("weight");

                    if (id.equals(jTextField2.getText()) && name.equals(jTextField3.getText())
                        && address.equals(jTextField4.getText()) && mobile.equals(jTextField5.getText())
                        && age.equals(jTextField6.getText()) && weight.equals(jTextField7.getText())) {
                        JOptionPane.showMessageDialog(this, " تم حفظ البيانات بنجاح");
                    }
                } 
            } catch (Exception ex) {
                System.out.println(ex.getMessage());
            }
            
            updatetable();
        }

        
        
        
        
        
        
        jLabel11.setText("");
       jLabel11.setForeground(Color.red);
        
        DefaultTableModel model=(DefaultTableModel) jTable1.getModel();
        model.fireTableDataChanged();
       
        if(jTextField2.getText().trim().equals("")){
            jLabel11.setText("من فضلك ادخل رقم العضوية ");
       jTextField2.requestFocus();
        }
       
        else if(jTextField3.getText().trim().equals("")){
             jLabel12.setText("");
        jLabel12.setForeground(Color.red);
            jLabel12.setText("من فضلك ادخل الاسم");
             jTextField3.requestFocus(); 
             
        }
       
       else if(jTextField4.getText().trim().equals("")){
           jLabel13.setText("");
        jLabel13.setForeground(Color.red);
           jLabel13.setText("من فضلك ادخل العنوان ");
        jTextField4.requestFocus();
        }
      
        
        
        else if(jTextField5.getText().trim().equals("")){
            jLabel14.setText("");
        jLabel14.setForeground(Color.red);
                 jLabel14.setText("من فضلك ادخل العمر ");
       jTextField5.requestFocus();
     
        }
        
       else if(jTextField6.getText().trim().equals("")){
           //jLabel11.setText("");
        jLabel15.setForeground(Color.red);
           jLabel15.setText("من فضلك ادخل رقم الموبايل ");
             jTextField6.requestFocus();
       }
       else if(jTextField7.getText().trim().equals("")){
           //jLabel11.setText("");
        jLabel16.setForeground(Color.red);
           jLabel16.setText("من فضلك ادخل الوزن ");
             jTextField7.requestFocus();
       }
       
       
        else{
            {
        model.addRow(new Object[]{jTextField2.getText(),jTextField3.getText(),jTextField4.getText()
                ,jTextField5.getText(),jTextField6.getText(),jTextField7.getText(),jComboBox1.getSelectedItem(),jDateChooser3.getDate(),jDateChooser2.getDate()});
        
       //JOptionPane.showConfirmDialog(null,"هل تريد ادخال هذا العنصر ","",JOptionPane.YES_NO_CANCEL_OPTION);

        JOptionPane.showMessageDialog(this,"تم ادخال عنصر جديد");
      
        
        
        }
        
       }
        
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String i = jTextField1.getText();
        String n=jTextField2.getText();
        String a=jTextField3.getText();
        String m=jTextField4.getText();
        String ag=jTextField5.getText();
        String w=jTextField6.getText();
        
        String edit = " UPDATE data SET name " + " = " + n + " , " + " address " + " = " + "'" + a + "'" + " WHERE id " + " = " + i +"";

        try {
            
            st.executeUpdate(edit);
            
        } catch (SQLException ex) {
            System.out.println(ex.getMessage());
        }
        
        
        
        
         DefaultTableModel model=(DefaultTableModel) jTable1.getModel();
                if(jTable1.getSelectedRow()==-1){
                
                    if(jTable1.getRowCount()==0){
                    
                        JOptionPane.showMessageDialog(this,"الجدول فارغ");
                        
                    }else{
                    
                        JOptionPane.showMessageDialog(this,"يجب ان تختار عنصر");
                    }
                }else{
                
                    JOptionPane.showConfirmDialog(null,"هل تريد تعديل هذا العنصر","",JOptionPane.YES_NO_CANCEL_OPTION);

                    model.setValueAt(jTextField2.getText(), jTable1.getSelectedRow(), 0);
                    model.setValueAt(jTextField3.getText(), jTable1.getSelectedRow(), 1);
                    model.setValueAt(jTextField4.getText(), jTable1.getSelectedRow(), 2);
                    model.setValueAt(jTextField5.getText(), jTable1.getSelectedRow(), 3);
                    model.setValueAt(jTextField6.getText(), jTable1.getSelectedRow(), 4);
                    model.setValueAt(jTextField7.getText(), jTable1.getSelectedRow(), 5);
                    model.setValueAt(jComboBox1.getSelectedItem().toString(), jTable1.getSelectedRow(), 6);
                    model.setValueAt(jDateChooser3.getDate().toString(),  jTable1.getSelectedRow(), 7);
                    model.setValueAt(jDateChooser2.getDate().toString(),  jTable1.getSelectedRow(), 8);

                   // JOptionPane.showConfirmDialog(null,"هل تريد تعديل هذا العنصر","",JOptionPane.YES_NO_CANCEL_OPTION);

//JOptionPane.showMessageDialog(this,"تم تعديل العنصر المطلوب");
updatetable();
                }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        String i=jTextField2.getText();
        try {
                st.executeUpdate("DELETE FROM data " +
                    "WHERE id "+"= "+ i +"");

                JOptionPane.showMessageDialog(this, " Data Successfully deleted");

            } catch (Exception ex) {
                System.out.println(ex.getMessage());
            }
       

        
    
    
        
       DefaultTableModel model=(DefaultTableModel) jTable1.getModel();
       //model.fireTableDataChanged();
                if(jTable1.getSelectedRow()==-1){
                
                    if(jTable1.getRowCount()==0){
                    
                        JOptionPane.showMessageDialog(this,"الجدول فارغ");
                        
                    }else{
                    
                        JOptionPane.showMessageDialog(this,"يجب ان تختار عنصر");
                    }
                }else{
                
                 JOptionPane.showConfirmDialog(null,"هل تريد حذف هذا العنصر ","",JOptionPane.YES_NO_CANCEL_OPTION);

                    model.removeRow(jTable1.getSelectedRow());

                   JOptionPane.showMessageDialog(this,"تم حذف العنصر");
                    


                }
//updatetable();
    }                                        

